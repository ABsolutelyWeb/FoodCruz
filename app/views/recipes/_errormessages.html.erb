<div class="errors">
<% if some_object.errors.any? %>
  <div class="row">
    <div class="alert alert-danger col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-8 col-xs-offset-2">
      <a class="close" data-dismiss="alert">&#215;</a>
      <h5>The follow errors occurred: </h5>
      <ul>
        <% some_object.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
</div>