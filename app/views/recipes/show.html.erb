<%= link_to "Edit Recipe", edit_recipe_path, class: "btn btn-primary btn-edit-show pull-right" %>

<div class="row white-text">
  <div class="col-lg-12 center show-positioning">
    <%= gravatar_for @recipe.chef, size: 200 %>
    <p>
      <h5 class="centered author-name">By <%= @recipe.chef.chefname %></h5>
    </p>
    <h1 class="centered show-page-title"><%= @recipe.name %></h1>
  </div>
  <div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
    <h3>Description: <br> <%= @recipe.summary%></h3>
  </div>
  <div class="show-page-image">
    <%= image_tag(@recipe.picture.url, class: "showpage-recipe-picture") if @recipe.picture? %>
  </div>  
  <div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
    <h3>Directions: <br> <%= simple_format(@recipe.description) %></h3>
  </div>
</div>

<br>
<div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
<h5><%= link_to "Back to Recipes", recipes_path, class: "btn btn-warning btn-position" %></h5>
</div>
<br><br><br><br>